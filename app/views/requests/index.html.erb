<h1>Requests#index</h1>

<p> See all requests below: </p>


<table>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
    <th>Message</th>
    <th>Actions</th>
  </thead>
  <tbody>
  <% @requests.each do |r|  %>
      <tr>
        <td><%= r.name  %></td>
        <td><%= mail_to r.email %></td>
        <td><%= r.department %></td>
        <td><%= r.message %></td>
        <!--  Actions and buttons  -->
        <td>
          <%= link_to "Edit", edit_request_path(r), class: "btn btn-info"  %>
          <%= link_to "Delete", request_path(r), method: :delete, data: {confirm: "Are you sure?"} %>
          <% if r.done  %>
            <%= link_to "Not Done", edit_request_path(r), class: "btn btn-info"  %>
          <% else  %>
            <%= form_for r, html:{class: "form-horizontal"} do |f| %>
              <% hidden_field_tag(:name, r.name)%>
              <%# hidden_field_tag "email", r.email %>
              <%# hidden_field_tag "department", r.department %>
              <%# hidden_field_tag "message", r.message %>
              <%# hidden_field_tag "done", true %>
              <%= f.submit "Mark Done", class: "btn btn-primary"%>
            <% end  %>
          <% end  %>
        </td>
      </tr>
    <% end  %>
  </tbody>
</table>
